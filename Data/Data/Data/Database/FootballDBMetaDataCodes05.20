/* Field_Goal Table
*/

 CREATE TABLE `field_goal` (
  `FGResult` tinyint(1) DEFAULT NULL,
  `FGDist` int DEFAULT NULL,
  `FGOP` float(3,2) DEFAULT NULL,
  `field_goalID` int NOT NULL,
  `hashID` varchar(10) DEFAULT NULL,
  `playerIDFG` int DEFAULT NULL,
  `practice` tinyint(1) DEFAULT NULL,
  `game` tinyint(1) DEFAULT NULL,
  `rain` tinyint(1) DEFAULT NULL,
  `windy` tinyint(1) DEFAULT NULL,
  `grass` tinyint(1) DEFAULT NULL,
  `turf` tinyint(1) DEFAULT NULL,
  `playerIDSS` int DEFAULT NULL,
  PRIMARY KEY (`field_goalID`),
  KEY `FK_playerID` (`playerIDFG`),
  KEY `fk_playerIDSS` (`playerIDSS`),
  KEY `FK_HashID` (`hashID`),
  CONSTRAINT `FK_HashID` FOREIGN KEY (`hashID`) REFERENCES `hash` (`hashID`),
  CONSTRAINT `FK_playerID` FOREIGN KEY (`playerIDFG`) REFERENCES `player` (`playerID`),
  CONSTRAINT `fk_playerIDSS` FOREIGN KEY (`playerIDSS`) REFERENCES `player` (`playerID`)
) 

/* Kickoff Table
*/

CREATE TABLE `kickoff` (
  `HangTime` float(3,2) DEFAULT NULL,
  `Distance` int DEFAULT NULL,
  `KOID` int NOT NULL,
  `KOlocID` int DEFAULT NULL,
  `playerIDKO` int DEFAULT NULL,
  `KODate` date DEFAULT NULL,
  `practice` tinyint(1) DEFAULT NULL,
  `game` tinyint(1) DEFAULT NULL,
  `rain` tinyint(1) DEFAULT NULL,
  `windy` tinyint(1) DEFAULT NULL,
  `grass` tinyint(1) DEFAULT NULL,
  `turf` tinyint(1) DEFAULT NULL,
  PRIMARY KEY (`KOID`),
  KEY `FK_locationID` (`KOlocID`),
  KEY `FK_playerIDKO` (`playerIDKO`),
  CONSTRAINT `FK_locationID` FOREIGN KEY (`KOlocID`) REFERENCES `location` (`locationid`),
  CONSTRAINT `FK_playerIDKO` FOREIGN KEY (`playerIDKO`) REFERENCES `player` (`playerID`)
)

/* Punt Table
*/
 
CREATE TABLE `punt` (
  `KickLoc` int DEFAULT NULL,
  `SnapLoc` int DEFAULT NULL,
  `Snaptime` float(3,2) DEFAULT NULL,
  `PuntOPtime` float(3,2) DEFAULT NULL,
  `H2F` float(3,2) DEFAULT NULL,
  `PHang` float(3,2) DEFAULT NULL,
  `PuntDist` int DEFAULT NULL,
  `PuntID` int NOT NULL,
  `playerIDP` int DEFAULT NULL,
  `PLocID` int DEFAULT NULL,
  `PDate` date DEFAULT NULL,
  `practice` tinyint(1) DEFAULT NULL,
  `game` tinyint(1) DEFAULT NULL,
  `rain` tinyint(1) DEFAULT NULL,
  `windy` tinyint(1) DEFAULT NULL,
  `grass` tinyint(1) DEFAULT NULL,
  `turf` tinyint(1) DEFAULT NULL,
  `playerIDLS` int DEFAULT NULL,
  PRIMARY KEY (`PuntID`),
  KEY `FK_playerIDP` (`playerIDP`),
  KEY `FK_PLocID` (`PLocID`),
  KEY `fk_playerIDLS` (`playerIDLS`),
  CONSTRAINT `fk_playerIDLS` FOREIGN KEY (`playerIDLS`) REFERENCES `player` (`playerID`),
  CONSTRAINT `FK_playerIDP` FOREIGN KEY (`playerIDP`) REFERENCES `player` (`playerID`),
  CONSTRAINT `FK_PLocID` FOREIGN KEY (`PLocID`) REFERENCES `location` (`locationid`)
)

/* Hash Table
*/

CREATE TABLE `hash` (
  `hashID` varchar(10) NOT NULL,
  `description` varchar(20) DEFAULT NULL,
  PRIMARY KEY (`hashID`)
)



/* Location table
*/
CREATE TABLE `location` (
  `description` varchar(30) DEFAULT NULL,
  `locationid` int NOT NULL,
  PRIMARY KEY (`locationid`)
) 


